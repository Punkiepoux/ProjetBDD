<%- include("../_header") -%>

<h1>Ajouter un produit</h1>
<% if(typeof (error) != "undefined"){ %>
  <div class="alert alert-warning alert-dismissible fade show" role="alert">
    <strong><%=  error  %></strong>
  </div>
<% } %>
<form action="/produits/create" method="post">
  <div class="form-horizontal">
    <div class="form-group row">
      <label class="col-form-label col-sm-2" for="id">Id Produit :</label>
      <div class="col-sm-8">
        <input autofocus class="form-control" name="id" value="<%= model.idproduit  %>" />
      </div>
    </div>
    <%- include("_editor") -%>

    <div class="form-group row">
      <label class="col-form-label col-sm-2"></label>
      <div class="col-sm-10">
        <input type="submit" value="Ajouter" class="btn btn-default btn-success" />
        <a class="btn btn-outline-dark cancel" href="/produits">Annuler</a>
      </div>
    </div>
  </div>
</form>

<%- include("../_footer") -%>