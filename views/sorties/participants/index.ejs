<%- include("../../_header") -%>

<h1> Participants à la sortie <%= id %> </h1>
<% if(typeof (error) != "undefined"){ %>
  <div class="alert alert-warning alert-dismissible fade show" role="alert">
    <strong><%=  error  %></strong>
  </div>
<% } %>
<div class="table-responsive-sm">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>N° Adherent</th>
        <th class="d-print-none">
          <a class="btn btn-sm btn-success" href="/sorties/participants/<%= id %>/create">Ajouter</a>
        </th>
      </tr>
    </thead>
    <tbody>
      <% for (const participant of model) { %>
        <tr>
          <td><%= participant.numadherent   %></td>
          <td class="d-print-none">
            <a class="btn btn-sm btn-danger" href="/sorties/participants/<%= id %>/delete/<%= participant.numadherent %>">Effacer</a>
          </td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>

<%- include("../../_footer") -%>