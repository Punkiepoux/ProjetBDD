<%- include("../../_header") -%>

<h1>Ajouter un participant à la sortie <%= id%> </h1>

<form action="/sorties/participants/<%= id%>/create" method="post">
  <div class="form-horizontal">
      <div class="form-group row">
        <label class="col-form-label col-sm-2" for="sortie">Id Sortie :</label>
        <div class="col-sm-8">
          <input readonly class="form-control" name="sortie" value="<%= id %>" />
        </div>
      </div>
  
      <div class="form-horizontal">
        <div class="form-group row">
          <label class="col-form-label col-sm-2" for="num">N° Adherent :</label>
          <div class="col-sm-8">
            <input autofocus class="form-control" name="num" value="<%= model.numadherent %>" />
          </div>
        </div>

    <div class="form-group row">
      <label class="col-form-label col-sm-2"></label>
      <div class="col-sm-10">
        <input type="submit" value="Ajouter" class="btn btn-default btn-success" />
        <a class="btn btn-outline-dark cancel" href="/sorties/participants/<%= id%>">Annuler</a>
      </div>
    </div>
  </div>
</form>

<%- include("../../_footer") -%>