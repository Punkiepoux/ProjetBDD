<%- include("../_header") -%>

<h1>Effacer la sortie ?</h1>

<form action="/sorties/delete/<%= model.idsortie %>" method="post">
    <div class="form-horizontal">
  
      <%- include("_display") -%>
      <div class="form-group row">
        <label class="col-form-label col-sm-2" for="date">Date :</label>
        <div class="col-sm-8">
          <input autofocus class="form-control" name="date" value="<%= moment(model.datesortie).format('YYYY-MM-DD')  %>" />
        </div>
      </div>
      <div class="form-group row">
        <label class="col-form-label col-sm-2"></label>
        <div class="col-sm-10">
          <input type="submit" value="Effacer" class="btn btn-default btn-danger" />
          <a class="btn btn-outline-dark cancel" href="/sorties">Annuler</a>
        </div>
      </div>
    </div>
</form>

<%- include("../_footer") -%>