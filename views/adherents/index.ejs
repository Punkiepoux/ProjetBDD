<%- include("../_header") -%>

<h1> Adhérents du BDE </h1>

<div class="table-responsive-sm">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>N°</th>
        <th>Prénom</th>
        <th>Nom</th>
        <th>Promotion</th>
        <th>Role</th>
        <th>Tel</th>
        <th>Mail</th>
        <th>Adresse</th>
        <th>Ardoise</th>
        <th class="d-print-none">
          <a class="btn btn-sm btn-success" href="/adherents/create">Ajouter</a>
        </th>
      </tr>
    </thead>
    <tbody>
      <% for (const adherent of model) { %>
        <tr>
          <td><%= adherent.numadherent  %></td>
          <td><%= adherent.prenomadherent  %></td>
          <td><%= adherent.nomadherent  %></td>
          <td><%= adherent.promotionadherent   %></td>
          <td><%= adherent.roleadherent   %></td>
          <td><%= adherent.teladherent   %></td>
          <td><%= adherent.mailadherent   %></td>
          <td><%= adherent.adresseadherent   %></td>
          <td><%= adherent.ardoiseadherent   %></td>
          <td class="d-print-none">
            <a class="btn btn-sm btn-warning" href="/adherents/edit/<%= adherent.numadherent %>">Modifier</a>
            <a class="btn btn-sm btn-danger" href="/adherents/delete/<%= adherent.numadherent %>">Effacer</a>
          </td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>

<%- include("../_footer") -%>