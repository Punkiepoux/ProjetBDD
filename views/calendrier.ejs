<%- include("_header") -%>

<h1> Calendrier d'évenements </h1>

<div class="table-responsive-sm">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Évenement</th>
        <th>Date</th>
        <th>Lieu</th>
        <th>Prix</th>
        <th class="d-print-none">
          <a class="btn btn-sm btn-success" href="/create">Ajouter</a>
        </th>
      </tr>
    </thead>
    <tbody>
      <% for (const adherent of model) { %>
        <tr>

            <td class="d-print-none">
                <a class="btn btn-sm btn-warning" href="/editadherent/<%= adherent.numadherent %>">Modifier</a>
                <a class="btn btn-sm btn-danger" href="/deleteadherent/<%= adherent.numadherent %>">Effacer</a>
            </td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>

<%- include("_footer") -%>