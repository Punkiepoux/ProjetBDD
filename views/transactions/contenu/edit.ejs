<%- include("../../_header") -%>

<h1>Modifier le contenu d'une transaction</h1>

<form action="/transactions/contenu/<%= id%>/edit/<%= model.idproduit %>" method="post">
  <div class="form-horizontal">
    <div class="form-group row">
      <label class="col-form-label col-sm-2" for="trans">Id Transaction :</label>
      <div class="col-sm-8">
        <input readonly class="form-control" name="trans" value="<%= model.idtransaction %>" />
      </div>
    </div>

    <div class="form-horizontal">
      <div class="form-group row">
        <label class="col-form-label col-sm-2" for="prod">Id Produit :</label>
        <div class="col-sm-8">
          <input readonly class="form-control" name="prod" value="<%= model.idproduit %>" />
        </div>
      </div>
      <div class="form-horizontal">
        <div class="form-group row">
          <label class="col-form-label col-sm-2" for="qte">Quantit√© :</label>
          <div class="col-sm-8">
            <input autofocus class="form-control" name="qte" value="<%= model.qteproduittransaction %>" />
          </div>
        </div>
    <div class="form-group row">
      <label class="col-form-label col-sm-2"></label>
      <div class="col-sm-10">
        <input type="submit" value="Modifier" class="btn btn-default btn-warning" />
        <a class="btn btn-outline-dark cancel" href="/transactions/contenu/<%= id%>">Annuler</a>
      </div>
    </div>
  </div>
</form>

<%- include("../../_footer") -%>