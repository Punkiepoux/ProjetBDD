<%- include("../../_header") -%>

<h1>Ajouter un contenu de transaction</h1>
<% if(typeof (error) != "undefined"){ %>
  <div class="alert alert-warning alert-dismissible fade show" role="alert">
    <strong><%=  error  %></strong>
  </div>
<% } %>
<form action="/transactions/contenu/<%= id%>/create" method="post">
  <div class="form-horizontal">
      <div class="form-group row">
        <label class="col-form-label col-sm-2" for="trans">Id Transaction</label>
        <div class="col-sm-8">
          <input readonly class="form-control" name="trans" value="<%= id %>" />
        </div>
      </div>
  
      <div class="form-horizontal">
        <div class="form-group row required">
          <label class="col-form-label col-sm-2 control-label" for="prod">Id Produit</label>
          <div class="col-sm-8">
            <input autofocus class="form-control" name="prod" value="<%= model.idproduit %>" />
          </div>
        </div>
        <div class="form-horizontal">
          <div class="form-group row">
            <label class="col-form-label col-sm-2" for="qte">Quantit√©</label>
            <div class="col-sm-8">
              <input autofocus class="form-control" name="qte" value="<%= model.qteproduittransaction %>" />
            </div>
          </div>

    <div class="form-group row">
      <label class="col-form-label col-sm-2"></label>
      <div class="col-sm-10">
        <input type="submit" value="Ajouter" class="btn btn-default btn-success" />
        <a class="btn btn-outline-dark cancel" href="/transactions/contenu/<%= id%>">Annuler</a>
      </div>
    </div>
  </div>
</form>

<%- include("../../_footer") -%>