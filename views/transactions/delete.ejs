<%- include("../_header") -%>

<h1>Effacer la transaction ?</h1>
<% if(typeof (error) != "undefined"){ %>
  <div class="alert alert-warning alert-dismissible fade show" role="alert">
    <strong><%=  error  %></strong>
  </div>
<% } %>
<form action="/transactions/delete/<%= model.idtransaction %>" method="post">
    <div class="form-horizontal">
  
      <%- include("_display") -%>
      <div class="form-group row">
        <label class="col-form-label col-sm-2" for="date">Date :</label>
        <div class="col-sm-8">
          <input readonly class="form-control" name="date" type="date" value="<%= moment(model.datetransaction).format('YYYY-MM-DD')  %>" />
        </div>
      </div>
      <div class="form-group row">
        <label class="col-form-label col-sm-2"></label>
        <div class="col-sm-10">
          <input type="submit" value="Effacer" class="btn btn-default btn-danger" />
          <a class="btn btn-outline-dark cancel" href="/transactions">Annuler</a>
        </div>
      </div>
    </div>
</form>

<%- include("../_footer") -%>